{
  "build": {
    "beforeDevCommand": "pnpm fe-dev",
    "beforeBuildCommand": "pnpm fe-build",
    "devPath": "http://localhost:1420",
    "distDir": "../dist",
    "withGlobalTauri": false
  },
  "package": {
    "productName": "motionly",
    "version": "0.0.0"
  },
  "tauri": {
    "allowlist": {
      "all": false,
      "shell": {
        "all": false,
        "open": true
      }
    },
    "bundle": {
      "active": true,
      "icon": [
        "icons/32x32.png",
        "icons/128x128.png",
        "icons/128x128@2x.png",
        "icons/icon.icns",
        "icons/icon.ico"
      ],
      "identifier": "video.motionly",
      "targets": "all"
    },
    "security": {
      "csp": null
    },
    "updater": {
      "active": false
    },
    "windows": [
      {
        "fullscreen": false,
        "resizable": true,
        "title": "motionly",
        "width": 1280,
        "height": 720
      }
    ],
    "cli": {
      "description": "Motionly cli",
      "longDescription": "Use Motionly cli to render videos",
      "subcommands": {
        "video": {
          "description": "Render a video",
          "args": [
            {
              "index": 1,
              "name": "video",
              "required": true,
              "takesValue": true
            }
          ]
        }
      }
    }
  }
}